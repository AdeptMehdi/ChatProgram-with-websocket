---
/**
 * @fileoverview Base layout for the Chat application.
 * Includes global styles and external dependencies.
 */

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="fa" dir="rtl">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro Chat Application" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<!-- Vazir Font -->
		<link href="https://cdn.jsdelivr.net/gh/rastikerdar/vazir-font@v30.1.0/dist/font-face.css" rel="stylesheet" type="text/css" />
		
		<!-- Font Awesome 6+ -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
		
		<!-- Custom Styles -->
		<link rel="stylesheet" href="/css/style.css" />
	</head>
	<body>
		<div class="liquid-bg">
			<div class="liquid-blob blob-1"></div>
			<div class="liquid-blob blob-2"></div>
			<div class="liquid-blob blob-3"></div>
			<div class="liquid-blob blob-4"></div>
		</div>
		<slot />
	</body>
</html>

<style is:global>
	/* Global Resets are now in style.css */
</style>
